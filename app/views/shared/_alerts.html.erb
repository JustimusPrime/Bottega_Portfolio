<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Justimus Prime", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Justimus Prime", sticky: false) %>
  <% else%>
  <%= js add_gritter(flash[:notice], title: "Justimus Prime", sticky: false) %>
<% end %>