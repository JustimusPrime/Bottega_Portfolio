<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-1">
          
        </div>
        <div class="col-md-11">
          <%= comment.content %>
        </div> 
        <div class="comment-attribution">
          Comment posted by <%= comment.user.name %> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
        </div>    
      </div>
    </div>
  </div>
</div>